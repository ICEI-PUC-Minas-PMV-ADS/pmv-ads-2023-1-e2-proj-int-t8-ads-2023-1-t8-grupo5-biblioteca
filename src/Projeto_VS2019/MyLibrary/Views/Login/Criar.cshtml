@model UsuarioModel
@{ 
    ViewData["Title"] = "Criar Login";
}
<div>
    <h1>Cadastrar Ususario</h1>

</div>

<form asp-controller="Login" asp-action="Criar" method="post">
    
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Digite seu E-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="exampleInputPassword1" placeholder="Senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" role="button">Cancelar</a>
</form>