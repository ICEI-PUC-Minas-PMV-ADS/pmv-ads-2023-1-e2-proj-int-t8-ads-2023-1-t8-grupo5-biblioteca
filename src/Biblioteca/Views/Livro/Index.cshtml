
@model IEnumerable<LivroModel>


@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Index</h1>
<br>

<div class="text-center">
    <a asp-action="Create" asp-controller="Livro">
        <button type="button" class="btn btn-primary">Cadastrar novo livro</button>
    </a>
</div>

<br>

<table class="table table-hover">
    <thead>
        
        
        
        <tr>
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col">Autor</th>
            <th scope="col">Categoria</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>

    @if (Model.Count() != 0)
    {
        <tbody>

            @foreach(var obj in Model)
             {
                <tr>
                    <th scope="row">@obj.Id</th>
                    <td>@obj.Titulo</td>
                    <td>@obj.Autor</td>
                    <td>@obj.Categoria</td>
                    <td>
                        <a class="btn btn-info" asp-route-Id="@obj.Id" asp-controller="Livro" asp-action="Update">Editar</a>
                        <a class="btn btn-danger" asp-route-Id="@obj.Id" asp-controller="Livro" asp-action="Delete">Excluir</a>
                    </td>
                </tr>
             }
        </tbody>
    }

</table>

