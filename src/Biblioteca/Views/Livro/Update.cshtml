@model LivroModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<form method="post" asp-action="Update" class="container">
    <input asp-for="Id" hidden /> 


    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Titulo">Nome:</label>
        </div>
        <div class="col-6">
            <input type="text" class="form-control" asp-for="Titulo" required>
            <span asp-validation-for="Titulo" class="text-danger"> </span>
        </div>


    </div>


    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Autor">Autor:</label>
        </div>

        <div class="col-6">
            <input type="text" class="form-control" asp-for="Autor" required>

        </div>

    </div>


    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Categoria">Categoria:</label>
        </div>

        <div class="col-6">
            <input type="text" class="form-control" asp-for="Categoria" required>
        </div>

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-dark" asp-action="Index">voltar</a>
</form>