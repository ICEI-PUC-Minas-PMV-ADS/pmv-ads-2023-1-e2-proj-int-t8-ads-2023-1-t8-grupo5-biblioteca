@model LivroModel


@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<form method="post" asp-action="DeleteLivro" class="container">
    <input asp-for="Id" hidden />


    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Titulo">Nome:</label>
        </div>
        <div class="col-6">
            <input type="text" class="form-control" asp-for="Titulo" disabled>
            <span asp-validation-for="Titulo" class="text-danger"> </span>
        </div>


    </div>


    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Autor">Autor:</label>
        </div>

        <div class="col-6">
            <input type="text" class="form-control" asp-for="Autor" disabled>

        </div>

    </div>


    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Categoria">Categoria:</label>
        </div>

        <div class="col-6">
            <input type="text" class="form-control" asp-for="Categoria" disabled>
        </div>

    </div>
    <p>Tem certeza que deseja deletar esse livro?</p>
    <button type="submit" class="btn btn-danger">Deletar</button>
    <a class="btn btn-dark" asp-action="Index">voltar</a>
</form>