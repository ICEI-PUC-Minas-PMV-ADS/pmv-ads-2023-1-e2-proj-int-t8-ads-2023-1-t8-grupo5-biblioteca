@model LoginModel
@{
    Layout = "_LayoutLogoff";
    ViewData["Title"] = "Login";
}



<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="Login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="Login" placeholder="Login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="Senha" placeholder="Senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-primary">Entrar</button>
    <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Criar">Ainda não tenho cadastro</a>
</form>
